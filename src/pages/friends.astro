---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

import Base from "@layouts/Base.astro";
import PageHeader from "@components/PageHeader.astro";
import BackLink from "@components/BackLink.astro";

import { SITE_TITLES, SITE_DESCRIPTIONS, WEBRINGS, FRIENDS } from "@lib/consts";
---

<Base
  title={SITE_TITLES.friends}
  description={SITE_DESCRIPTIONS.friends}
  image="/friends.png"
>
  <div class="w-full max-w-2xl flex flex-col gap-12">
    <PageHeader title="friends" description={SITE_DESCRIPTIONS.friends} />

    <section class="flex flex-col gap-4">
      <h2 class="text-xl">my badge</h2>
      <div class="flex flex-col gap-2">
        <img
          src="/badges/me.gif"
          alt="isabel roses"
          width={88}
          height={31}
          style="image-rendering: pixelated"
        />
        <p class="text-fg-lighter text-sm">feel free to add it to your site!</p>
      </div>
    </section>

    <section class="flex flex-col gap-4">
      <h2 class="text-xl">friends</h2>
      <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 gap-2">
        {
          FRIENDS.map((friend) => (
            <a
              href={friend.link}
              target="_blank"
              rel="noopener noreferrer"
              class="hover:scale-105 transition-transform"
              title={friend.name}
            >
              <Image
                src={`/badges/friends/${friend.image}`}
                alt={friend.name}
                width={88}
                height={31}
                style="image-rendering: pixelated"
              />
            </a>
          ))
        }
      </div>
    </section>

    <section class="flex flex-col gap-4">
      <h2 class="text-xl">webrings</h2>
      <ul class="flex flex-col gap-3">
        {
          WEBRINGS.map((webring) => (
            <li class="flex flex-row items-center gap-2 bg-card rounded-lg overflow-hidden">
              <a
                href={webring.href + webring.prev}
                class="flex items-center justify-center w-12 h-12 text-fg-lighter hover:text-special transition-colors"
                aria-label="Previous"
              >
                <Icon name="fa7-solid:chevron-left" class="w-4 h-4" />
              </a>
              <a
                href={webring.href}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 py-3 text-center hover:text-special transition-colors"
              >
                {webring.name}
              </a>
              <a
                href={webring.href + webring.next}
                class="flex items-center justify-center w-12 h-12 text-fg-lighter hover:text-special transition-colors"
                aria-label="Next"
              >
                <Icon name="fa7-solid:chevron-right" class="w-4 h-4" />
              </a>
            </li>
          ))
        }
      </ul>
    </section>

    <BackLink href="/" />
  </div>
</Base>
