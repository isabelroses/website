---
interface Props {
  title: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<section class="flex flex-col gap-4">
  <slot name="back" />
  <h1 class="text-2xl font-semibold">{title}</h1>
  {description && <p class="text-fg-lighter">{description}</p>}
  <slot />
</section>
