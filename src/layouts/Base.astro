---
import BaseHead from "@components/BaseHead.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const props = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead {...props} />
  </head>

  <body class="bg-bg text-fg flex flex-col items-center w-6xl mx-auto">
    <slot />
  </body>
</html>
