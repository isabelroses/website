{% extends "layouts/base.tera" %}

{% block title %}{% set title = "Blog > " ~ post.title %}{% endblock %}
{% block description %}{% set description = post.description %}{% endblock %}

{% block additionalhead %}
<script src="https://unpkg.com/@highlightjs/cdn-assets@11.9.0/highlight.min.js"></script>
<script src="https://unpkg.com/@highlightjs/cdn-assets@11.9.0/languages/nix.min.js"></script>
<script defer>
  hljs.highlightAll();
</script>
{% endblock %}

{% block main %}
<div class="relative self-start w-full pb-8 text-left">
  <h1 class="text-4xl font-bold">{{ post.title }}</h2>
  <p class="text-xl text-fg-lighter">{{ post.description }}</p>
  <p class="text-fg-lighter">{{ post.date }}</p>

  <div class="hidden lg:block absolute ml-1 flex flex-row gap-2 text-sm top-[5px] right-[15px]">
    {% for tag in post.tags %}
    <div class="tag">
      {{ tag }}
      <div class="tag-after"></div>
    </div>
    {% endfor %}
  </div>
</div>

<article class="pb-4 prose md:pb-8">{{ post.content }}</article>

<footer class="flex flex-col mb-12">
